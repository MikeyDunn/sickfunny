<section id="merch">
  <h2>merch.</h2>
  <div class="container">
    <div class="merch-item">
      <a href="https://shop.sickfunny.co/listing/buy-litty-kitty">{% image "./src/img/sad-but-lit.jpg", "litty kitty" %} litty kitty tee $15</a>
    </div>
    <div class="merch-item">
      <a href="https://shop.sickfunny.co/listing/get-smoke-meth">{% image "./src/img/smoke-meth.jpg", "litty kitty" %} smoke meth tee $15</a>
    </div>
    <div class="merch-item">
      <a href="https://shop.sickfunny.co/listing/can-t-stop-2025">{% image "./src/img/cant-stop.jpg", "litty kitty" %} can't stop tee $15</a>
    </div>
  </div>
</section>

<section id="posts">
  <h2>latest posts.</h2>
  <div class="container">
    {% for post in collections.post | reverse %}
      <article class="post-preview">
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p class="meta">
          {{ post.date | date }}
          {% if post.data.readTime %} • {{ post.data.readTime }}{% endif %}
        </p>
        <p>{{ post.data.description or "…" }}</p>

        {% if post.data.tags %}
          <p class="meta">tags:
            {% for tag in post.data.tags %}
              <a href="/tags/{{ tag | slug }}.html">{{ tag }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
          </p>
        {% endif %}

        <a href="{{ post.url }}">read more →</a>
      </article>
    {% endfor %}
  </div>
</section>