<section id="posts">
  <h1>latest posts.</h1>
  <ul class="container">
    {% for post in collections.post | reverse %}
      <li>
        <article class="post-preview">
          <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
          <div class="meta">
            {{ post.date | date }} •
            {{ post.data.readTime }} •
            {% for tag in post.data.tags %}
              <a href="/tags/{{ tag | slug }}/">{{ tag }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
          </div>
          <p>
            {{ post.data.description or "…" }}
            <a href="{{ post.url }}" aria-label="read more about {{ post.data.title }}">read more →</a>
          </p>
        </article>
      </li>
    {% endfor %}
  </div>
</section>
