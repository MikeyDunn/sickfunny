{% assign posts = collections.all | eleventyExcludeFromCollections: false %}
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in posts %}
    <url>
      <loc>{{ post.url | absoluteUrl("https://yourdomain.com") }}</loc>
      <lastmod>{{ post.date | dateToRfc3339 }}</lastmod>
    </url>
  {% endfor %}
</urlset>
