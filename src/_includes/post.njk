---
layout: layout.njk
title: {{ title }}
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <i>
      [{{ page.date | date }}]
      <br /> 
      tags: 
      {% for tag in tags %}
        <a href="http://localhost:8080/tags/{{ tag | slug }}/">{{ tag }}</a>{% if not loop.last %}, {% endif %}
      {% endfor %}
    </i>
  </p>
  {{ content | safe }}
</article>
<a href="/">back to safety</a>
