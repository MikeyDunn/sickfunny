---
layout: layout.njk
title: {{ title }}
---

<article>
  <h1>{{ title }}</h1>
  <p>
    <i>
      [{{ page.date | date }}]
      <br /> 
      tags: 
      {% for tag in tags %}
        {{ tag }}{% if not loop.last %}, {% endif %}
      {% endfor %}
    </i>
  </p>
  {{ content | safe }}
</article>
